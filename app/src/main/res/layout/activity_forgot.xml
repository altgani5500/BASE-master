<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:background="@drawable/forget_bg"
        android:id="@+id/linearLayout2">

    <ImageView
            android:textAlignment="viewStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_backa"
            android:id="@+id/imgbck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp"
            app:layout_constraintHorizontal_bias="0.021"/>
    <TextView
            android:textAlignment="viewStart"
            android:gravity="start"
            android:text="@string/forgot_page"
            android:textColor="@color/btn_bg"
            android:textSize="@dimen/sp_22"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="188dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:textAlignment="viewStart"
            android:gravity="start"
            android:textSize="@dimen/sp_14"
            android:text="@string/username_or_password"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="236dp" app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.cardview.widget.CardView
            android:padding="@dimen/dp_5"
            android:elevation="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_margin="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout

                android:textAlignment="viewStart"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:textAlignment="viewStart"
                    android:layout_margin="@dimen/dp_10"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_marginTop="@dimen/dp_12"
                        android:id="@+id/llForgotEmail"
                        android:background="@drawable/edittext_bg"
                        android:gravity="center"
                        android:layout_weight=".90"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_110">
                    <ImageView
                            android:textAlignment="viewStart"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:background="@drawable/username_forgot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:textColor="@color/btn_bg"
                        android:textSize="@dimen/sp_10"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:text="@string/or"
                        android:layout_width="0dp"
                        android:layout_weight=".20"
                        android:layout_height="@dimen/dp_110"/>

                <LinearLayout
                        android:layout_marginTop="@dimen/dp_12"
                        android:id="@+id/llForgotPass"
                        android:background="@drawable/edittext_bg"
                        android:gravity="center"
                        android:layout_weight=".90"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_110">
                    <ImageView
                            android:id="@+id/txtDummy2"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:background="@drawable/password_forgot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_margin="@dimen/dp_10"
                    android:weightSum="2"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textColor="@color/forgot_pass_text"
                        android:textSize="@dimen/sp_15"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:text="@string/username"
                        android:paddingRight="@dimen/dp_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/forgot_pass_text"
                        android:textSize="@dimen/sp_15"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>