<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:paddingStart="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shadow_bg_two">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

            <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textAlignment="viewStart"
                        android:layout_marginStart="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/custom_header_title"
                        android:text="@string/profile"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txtEditProfile"
                        android:textAlignment="viewEnd"
                        android:layout_marginStart="@dimen/dp_5"
                        android:textSize="@dimen/sp_10"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/custom_header_title"
                        android:text="@string/edit"
                        android:layout_width="0dp"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_margin="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_90"
                        android:layout_gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/others"
                        android:id="@+id/imgUserPrev"
                />

                <LinearLayout
                        android:layout_marginStart="@dimen/dp_10"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/txtProfileView_Title"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/jobs_header_title"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:gravity="start"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/txtProfileView_CreatedJob"
                            android:drawablePadding="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/jobs_title3_and_bottom_text"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:gravity="start|center_vertical"
                            android:drawableStart="@drawable/blue_location"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <View
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_18"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>

            <LinearLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/enterprise_id_seven"
                        android:textSize="@dimen/sp_12"
                        android:textAlignment="viewStart"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/jobs_header_title"
                        android:text="@string/enterprise_id"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txtProfileView_EntId1"
                        android:paddingStart="@dimen/dp_29"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textSize="@dimen/sp_10"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:textColor="@color/jobs_title3_and_bottom_text"
                        android:text=""
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
            <View
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_18"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>

            <LinearLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/enterprise_name_aseven"
                        android:textSize="@dimen/sp_12"
                        android:textAlignment="viewStart"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/jobs_header_title"
                        android:text="@string/enterprise_name"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txtProfileView_Entname"
                        android:paddingStart="@dimen/dp_29"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_10"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:textColor="@color/jobs_title3_and_bottom_text"
                        android:text=""
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>


            <View
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_18"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>

            <LinearLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/enterprise_category_seven"
                        android:textSize="@dimen/sp_12"
                        android:textAlignment="viewStart"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/jobs_header_title"
                        android:text="@string/enterprise_category_industry"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txtProfileView_EntCate"
                        android:paddingStart="@dimen/dp_29"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_10"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:textColor="@color/jobs_title3_and_bottom_text"
                        android:text=""
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_18"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>

            <LinearLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/general_info_seven"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/jobs_header_title"
                        android:text="@string/general_info"
                        android:textAlignment="viewStart"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txtProfileView_GEne"
                        android:paddingStart="@dimen/dp_29"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_10"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:textColor="@color/jobs_title3_and_bottom_text"
                        android:text=""
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>