<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_2"
            android:elevation="@dimen/dp_8"
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/ll_view_forDetails"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/llcancel_JOb"
                        android:gravity="start|center_vertical"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <TextView
                            android:id="@+id/txtJobsTtiles"
                            android:textAlignment="viewStart"
                            android:textColor="@color/jobs_header_title"
                            android:textSize="@dimen/sp_14"
                            android:text="Ui Designer"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txtJobsClosed"
                            android:textAlignment="viewStart"
                            android:paddingStart="@dimen/dp_30"
                            android:drawablePadding="@dimen/dp_5"
                            android:textColor="@color/bg_screen1"
                            android:textSize="@dimen/sp_10"
                            android:text="@string/closed"
                            android:drawableStart="@drawable/circle_drawable"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_width="0dp"
                            android:layout_weight=".60"
                            android:layout_height="wrap_content"/>

                </LinearLayout>


                <TextView
                        android:id="@+id/txtJobsCity"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableStart="@drawable/office_branch_new"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/jobs_title2_and_desc"
                        android:textSize="@dimen/sp_10"
                        android:text=""
                        android:textAlignment="textStart"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txtJobsDescTitle"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/jobs_title3_and_bottom_text"
                        android:textSize="@dimen/sp_11"
                        android:text="@string/description"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txtJobsDesc"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/jobs_title2_and_desc"
                        android:textSize="@dimen/sp_9"
                        android:text=""
                        android:maxLines="7"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:background="@color/divider"
                    android:layout_height="@dimen/dp_1"/>

            <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">

                <LinearLayout
                        android:gravity="start|center_vertical"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txtJobsApplication"
                            android:gravity="start|center_vertical"
                            android:drawablePadding="@dimen/dp_5"
                            android:textColor="@color/jobs_title3_and_bottom_text"
                            android:textSize="@dimen/sp_11"
                            android:text=""
                            android:drawableStart="@drawable/applicants_new"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:gravity="end|right|center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:layout_marginRight="@dimen/dp_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cancel_new"
                            android:id="@+id/jobsDelete"
                    />
                    <ImageView
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_new"
                            android:id="@+id/jobsEditJobs"
                    />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>