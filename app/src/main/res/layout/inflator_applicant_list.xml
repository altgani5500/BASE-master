<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@drawable/shadow_bg_two"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:elevation="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/applicant_ll3"
                        android:gravity="start|center_vertical"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:gravity="start|center_vertical"
                            android:layout_weight="1.4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/inf_appli_img"
                                android:background="@drawable/others"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FF000000"
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_70">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                                android:id="@+id/inf_appli_title"
                                android:paddingStart="@dimen/dp_10"
                                android:textSize="@dimen/sp_13"
                                android:textAlignment="viewStart"
                                android:gravity="start"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Techugo Pvt Ltd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                            android:gravity="end|center_vertical"
                            android:layout_weight=".60"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                        <ImageButton
                                android:id="@+id/inf_appli_chat"
                                android:layout_marginEnd="@dimen/dp_19"
                                android:background="@drawable/caht_six"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <ImageButton
                                android:id="@+id/inf_appli_delete"
                                android:background="@drawable/cancel_six"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/applicant_ll1"
                        android:weightSum="2"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:textAlignment="viewStart"
                                android:gravity="start|top|center_vertical"
                                android:layout_width="wrap_content"
                                android:paddingEnd="@dimen/dp_5"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:background="@drawable/working_hours_six"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"/>

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight=".80"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:textColor="@color/text_bg"
                                    android:textSize="@dimen/sp_9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/work_experience"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:id="@+id/applicant_workexp"
                                    android:textColor="@color/setting_page_text"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="SAR(Saudi Riyal)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:gravity="start|top|center_vertical"
                                android:layout_width="wrap_content"
                                android:paddingEnd="@dimen/dp_5"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:background="@drawable/nationality_six"
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"/>

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight=".80"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:textColor="@color/text_bg"
                                    android:textSize="@dimen/sp_9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/nationality"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:id="@+id/applicant_national"
                                    android:textColor="@color/setting_page_text"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="500"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/applicant_ll2"
                        android:weightSum="2"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:textAlignment="viewStart"
                            android:gravity="start"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:gravity="start|top|center_vertical"
                                android:layout_width="wrap_content"
                                android:paddingEnd="@dimen/dp_5"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:background="@drawable/education_level_six"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"/>

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight=".80"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:textColor="@color/text_bg"
                                    android:textSize="@dimen/sp_9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/education_level"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:id="@+id/applicant_education"
                                    android:textColor="@color/setting_page_text"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="SAR(Saudi Riyal)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:gravity="start|top|center_vertical"
                                android:layout_width="wrap_content"
                                android:paddingEnd="@dimen/dp_5"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:background="@drawable/applied_on_six"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"/>

                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight=".80"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:textColor="@color/text_bg"
                                    android:textSize="@dimen/sp_9"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/applied_on"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:id="@+id/applicant_appliedon"
                                    android:textColor="@color/setting_page_text"
                                    android:textSize="@dimen/sp_12"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="500"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_applicants"
                        android:textAlignment="viewStart"
                        android:gravity="start|center_vertical"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:id="@+id/applicantView"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/divider"
                    />


                    <TextView
                            android:textAlignment="viewStart"
                            android:gravity="start|center_vertical"
                            android:layout_marginTop="@dimen/dp_4"
                            android:id="@+id/applicant_Accept"
                            android:textColor="@color/setting_page_text"
                            android:textSize="@dimen/sp_12"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="500"
                            android:drawableStart="@drawable/accepted_six"
                            android:drawablePadding="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/inf_appli_acceptance"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/accept_for_interview"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:background="@color/btn_bg"
                        android:layout_height="@dimen/dp_45"/>

                <Button
                        android:id="@+id/inf_appli_final"
                        android:layout_marginStart="@dimen/dp_3"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/final_acceptance"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:background="@color/bg_screen3"
                        android:layout_height="@dimen/dp_45"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>