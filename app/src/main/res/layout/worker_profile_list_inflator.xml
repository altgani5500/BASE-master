<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txtTaskListTile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_weight=".60"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="start|center_vertical"
                    android:text="@string/task_name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/hint_bg"
                    android:textSize="@dimen/sp_12" />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:gravity="end|center_vertical">

                <LinearLayout
                        android:layout_marginStart="@dimen/dp_3"
                        android:gravity="end|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <View android:id="@+id/view_circle"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:background="@drawable/circle_completed" />

                    <TextView
                            android:id="@+id/txtTaskListStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="@string/completed"
                            android:textAlignment="viewStart"
                            android:textColor="@color/color_completed"
                            android:textColorHint="@color/color_completed"
                            android:textSize="@dimen/sp_11" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txtTaskListTitleValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="start|center_vertical"
                    android:hint="Applicant Design"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:textColor="@color/setting_page_text"
                    android:textColorHint="@color/setting_page_text"
                    android:textSize="@dimen/sp_11" />

            <TextView
                    android:id="@+id/txtTaskListType"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="start|center_vertical"
                    android:text="@string/task_type"
                    android:textAlignment="viewStart"
                    android:textColor="@color/hint_bg"
                    android:textSize="@dimen/sp_12" />

            <TextView
                    android:id="@+id/txtTaskListTypeValue"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="end|center_vertical"
                    android:hint="@string/continues"
                    android:maxLines="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/setting_page_text"
                    android:textColorHint="@color/setting_page_text"
                    android:textSize="@dimen/sp_11" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>