<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/languaage_change_enterprise"
        android:orientation="vertical"
        android:gravity="center"
>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Choose Language"
              android:textSize="@dimen/sp_16"
              android:textAllCaps="true"
              android:textColor="@color/blue"
              android:fontFamily="@font/montserrat_bold"
              android:gravity="center"
              android:id="@+id/txtChooseLang"
              android:layout_marginTop="@dimen/dp_270"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_lang_bg"
            android:text="@string/english"
            android:textSize="@dimen/sp_18"
            android:layout_below="@id/txtChooseLang"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="@color/white"
            android:id="@+id/btnEnglishLang"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_35"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_lang_bg"
            android:layout_below="@id/btnEnglishLang"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/arabic"
            android:textSize="@dimen/sp_18"
            android:textAllCaps="false"
            android:id="@+id/btnArabicLang"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_35"
    />

</LinearLayout>