<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shadow_bg_two"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content">

    <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center|center_vertical"
            android:text="@string/event_details"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_bg"
            android:textSize="@dimen/sp_11" />

    <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_5"
            android:id="@+id/txtMoreMonthNameCal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center|center_vertical"
            android:hint="Name"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="@color/setting_page_text"
            android:textSize="@dimen/sp_9" />
    <Button
            android:drawableStart="@drawable/calendar_mb"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_30"
            android:id="@+id/btn_calDialog"
            android:textColor="@color/app_white"
            android:text="@string/close"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/dp_110"
            android:background="@drawable/btn_bg_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>