<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:visibility="visible"
            android:id="@+id/llday_add_inflator"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">
            <LinearLayout
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45">
                <Spinner
                        android:id="@+id/spnDayOne_inflator"
                        android:textSize="@dimen/sp_12"
                        android:layout_weight="1"
                        android:entries="@array/day"
                        android:spinnerMode="dialog"
                        android:backgroundTint="@color/jobs_title2_and_desc"
                        android:textAlignment="textStart"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_45">

                </Spinner>
            </LinearLayout>


            <TextView
                    android:id="@+id/txtStartTimeOne_inflator"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="@dimen/dp_5"
                    android:textColor="@color/text_bg"
                    android:hint="@string/start_time"
                    android:textSize="@dimen/sp_12"
                    android:textColorHint="@color/hint_bg"
                    android:layout_marginStart="@dimen/dp_2"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"/>

            <TextView
                    android:id="@+id/txtEndTimeOne_inflator"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="@dimen/dp_5"
                    android:textColor="@color/text_bg"
                    android:hint="@string/end_time"
                    android:textSize="@dimen/sp_12"
                    android:textColorHint="@color/hint_bg"
                    android:layout_marginStart="@dimen/dp_2"
                    android:background="@drawable/edittext_bg"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>