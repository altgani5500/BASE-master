<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:background="@drawable/forget_bg"
        android:id="@+id/linearLayout2">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_backa"
            android:id="@+id/imgBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.021"/>

    <TextView
            android:textAlignment="viewStart"
            android:gravity="start"
            android:text="@string/forgot_page"
            android:textColor="@color/btn_bg"
            android:textSize="@dimen/sp_22"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:paddingStart="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="192dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textAlignment="viewStart"
            android:gravity="start"
            android:paddingStart="0dp"
            android:textSize="@dimen/sp_14"
            android:text="@string/enter_your_registered_email_id"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp" app:layout_constraintHorizontal_bias="1.0"/>
    <androidx.cardview.widget.CardView
            android:padding="@dimen/dp_5"
            android:elevation="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_margin="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout
                android:gravity="center_vertical|center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_margin="@dimen/dp_5"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:textAlignment="viewStart"
                        android:gravity="start|center_vertical"
                        android:id="@+id/edtForgotEmail"
                        android:layout_marginTop="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_3"
                        android:paddingStart="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_11"
                        android:drawableStart="@drawable/email_id"
                        android:textSize="@dimen/sp_12"
                        android:imeOptions="actionNext"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="@string/email_id"
                        android:textColorHint="@color/hint_bg"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/edittext_bg"/>


                <Button
                        android:id="@+id/btnForgotemail"
                        android:textColor="@color/app_white"
                        android:text="@string/submit"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:textSize="@dimen/sp_14"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>