<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:paddingStart="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shadow_bg_two">

        <LinearLayout
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

            <ImageView
                    android:id="@+id/accountSettingbck3"
                    android:background="@drawable/ic_back_add_jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textAlignment="viewStart"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/custom_header_title"
                    android:text="@string/notification_settings"
                    android:layout_weight=".80"
                    android:id="@+id/filterTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>




        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shadow_bg_two"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

            <TextView
                    android:paddingStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textAlignment="viewStart"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/jobs_header_title"
                    android:text="@string/message"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_weight=".80"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
            />
            <Switch
                    android:id="@+id/locationToggle_setting"
                    android:layout_weight=".20"
                    android:layout_width="0dp"
                    android:checked="true"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>